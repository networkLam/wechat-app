<!--pages/addressEdit/addressEdit.wxml-->
<navigation-bar title="编辑" back="{{true}}" color="black" background="#fff"></navigation-bar>
<view>
  <van-cell-group>
    <van-field model:value="{{ cantacts }}" required clearable label="收件人姓名" placeholder="请输入收件人姓名" border="{{ true }}" />
    <van-field model:value="{{ phone }}" label="手机号码" placeholder="手机号码" required border="{{ true }}" />
  </van-cell-group>
  <van-cell title="所在地区" is-link value="{{major_address}}" bind:click="showPopup" required />
  <van-cell-group>
    <van-field model:value="{{ minor_address }}" required clearable label="详细地址" placeholder="请输入详细地址" border="{{ true }}" />
  </van-cell-group>
  <view style="width: 100%; display: flex; justify-content: center;margin-top: 40rpx;">
      <van-button type="info" round block bind:click="save" >保存</van-button>
    </view>
  <view style="position: fixed;bottom: 400rpx;width: 100%;">
    <view style="width: 100%; display: flex; justify-content: center;">
      <van-button type="danger" round block wx:if="{{isShowDel}}">删除地址</van-button>
    </view>
  </view>
  <van-popup show="{{ show }}" bind:close="onClose" position="bottom" custom-style="height: 60%;">
    <van-area area-list="{{ areaList }}" bind:confirm="confirm_add" bind:cancel="onClose" />
  </van-popup>
</view>